<div class="container">
  <h2><%= @cocktail.name %></h1>
  <div>
    <% if @cocktail.photo? %>
    <%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fill %>
    <% end %>
  </div>
  <% @cocktail.doses.each do |dose| %>
    <p><%= dose.description %> - <%= dose.ingredient.name %>
      <%= link_to "delete", dose_path(dose), method: :delete %></p>
  <% end %>

  <div>
    <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient, collection: Ingredient.all %>
    <%= f.button :submit %>
    <% end %>
  </div>
  <%= link_to "back", root_path  %>
</div>
