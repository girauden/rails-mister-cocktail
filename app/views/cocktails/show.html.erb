<div class="container">
  <h2><%= @cocktail.name %></h1>
  <% @cocktail.doses.each do |dose| %>
    <p><%= dose.description %> - <%= dose.ingredient.name %>
      <%= link_to "delete", dose_path(dose), method: :delete %></p>
  <% end %>

  <div>
    <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient, collection: Ingredient.all %>
    <%= f.button :submit %>
    <% end %>
  </div>
  <%= link_to "back", root_path  %>
</div>
